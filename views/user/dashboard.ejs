    <!-- New Arrivals Section -->
    <section class="container mb-5">
        <h2 class="section-title">New Arrivals</h2>
        <div class="row">
            <% if (products && products.length > 0) { %>
                <% products.slice(0, 8).forEach(product => { %>
                    <div class="col-6 col-md-3 mb-4">
                        <div class="card product-card">
                            <% if (product.productOffer > 0) { %>
                                <div class="position-absolute bg-danger text-white px-3 py-1"
                                    style="top: 10px; right: 10px; border-radius: 20px; font-size: 12px;">
                                    -<%= product.productOffer %>%
                                </div>
                            <% } %>
                            <img src="/uploads/products/<%= product.mainImage %>"
                                 class="card-img-top product-img"
                                 alt="<%= product.productName %>"
                                 onerror="this.src='/api/placeholder/300/300'">
                            <div class="card-body p-3">
                                <h5 class="product-title"><%= product.productName %></h5>
                                <div class="mb-2">
                                    <% if (product.regularPrice > product.salePrice) { %>
                                        <span class="original-price">â¹<%= product.regularPrice.toFixed(2) %></span>
                                    <% } %>
                                    <span class="product-price">â¹<%= product.salePrice.toFixed(2) %></span>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted"><%= product.brand %></small>
                                </div>
                                <div class="rating">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No products available at the moment.</p>
                </div>
            <% } %>
        </div>
        <% if (products && products.length > 8) { %>
            <div class="text-end">
                <a href="#" class="btn btn-outline-primary">View All Products</a>
            </div>
        <% } %>
    </section>

