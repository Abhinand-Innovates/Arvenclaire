        }

        .related-product-image-container {
            height: 180px;
        }

        .related-product-actions {
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-related {
            padding: 0.75rem;
            font-size: 0.875rem;
        }

        /* Mobile adjustments for scroll button */
